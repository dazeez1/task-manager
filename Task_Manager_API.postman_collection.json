	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set base URL if not already set",
					"if (!pm.environment.get('baseUrl')) {",
					"    pm.environment.set('baseUrl', 'http://localhost:3000');",
					"}",
					"",
					"// Log current environment",
					"console.log('üåç Testing against:', pm.environment.get('baseUrl'));",
					"console.log('üîó Environment:', pm.environment.name);",
					"console.log('üìö Note: This collection tests the API only. Frontend is hosted separately.');"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "taskId",
			"value": "your-task-id-here",
			"type": "string"
		}
	]
